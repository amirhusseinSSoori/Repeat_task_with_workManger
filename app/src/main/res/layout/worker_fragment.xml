<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_workerF_onTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Worker OnTime"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_workerF_PeriodicWork"
        app:layout_constraintStart_toStartOf="@+id/btn_workerF_PeriodicWork"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_workerF_PeriodicWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Worker PeriodicWork"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/btn_workerF_onTime"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/txt_workerF_WorkManager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Work"
        app:layout_constraintEnd_toEndOf="@+id/btn_workerF_onTime"
        app:layout_constraintTop_toBottomOf="@id/btn_workerF_onTime"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/btn_workerF_onTime" />

</androidx.constraintlayout.widget.ConstraintLayout>